<div class="movie-card card m-2">
  <%= image_tag DiscoverHelper::IMG_BASE_URL + movie['poster_path'] %>
  <div class="card-body p-3">
    <h6 class="card-title"><%= movie['title'] %><small class="text-muted"> (<%= get_year_from_date(movie['release_date']) %>)</small></h6>
  </div>
  <div class="d-flex justify-content-center m-2">
    <% if media.present? %>
      <%= link_to 'Edit Rating', media_path(movie['id']), method: :get, class: 'btn btn-full btn-sm btn-light' %>
    <% else %>
      <%= link_to 'Add Media', discover_add_path(media: { id: movie['id'], title: movie['title'], year: get_year_from_date(movie['release_date']), info: movie['overview'] }), method: :post, class: 'btn btn-block btn-sm btn-info' %>
    <% end %>
  </div>
  <div class="card-footer text-center p-3">
    <% score = get_media_score(media) %>
    <%# Bold text only if there is a score %>
    <% if media.present? && media.zscore_sum != 0 %>
      <strong><%= score %></strong>
    <% else %>
      <small><%= score %></small>
    <% end %>
  </div>
</div>