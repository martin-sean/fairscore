<p id="notice"><%= notice %></p>

<h1>Media</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Info</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @media.each do |media | %>
      <tr>
        <td><%= media .title %></td>
        <td><%= media .year %></td>
        <td><%= media .info %></td>
        <td><%= link_to 'Show', media  %></td>
        <td><%= link_to 'Edit', edit_media _path(media ) %></td>
        <td><%= link_to 'Destroy', media , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Media ', new_media _path %>
