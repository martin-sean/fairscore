<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: media, local: true do |form| %>
      <%= render 'layouts/form_errors', model: media %>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :year %>
        <%= form.text_field :year, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :info %>
        <%= form.text_area :info, class: 'form-control' %>
      </div>
      <div class="actions">
        <%= form.submit class: 'btn btn-primary' %>
        <%= button_to 'Back', media_index_path, class: 'btn btn-light' %>
      </div>
    <% end %>
  </div>
</div>