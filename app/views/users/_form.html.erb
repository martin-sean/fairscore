<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @user, local: true do |form| %>
      <%= render 'layouts/form_errors', model: @user %>
      <div class="form-group">
        <%= form.label :username %>
        <%= form.text_field :username, class: 'form-control', placeholder: 'Username' %>
      </div>
      <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, class: 'form-control', placeholder: 'Password' %>
      </div>
      <div class="form-group">
        <%= form.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm Password' %>
      </div>
      <%= form.submit "Confirm", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>